---
import type { MarkdownInstance } from "astro";
import { format, parseISO } from "date-fns";
import type { PostFrontMatter } from "../utils/posts";
import {Image} from "@astrojs/image/components"

export interface Props {
	post: MarkdownInstance<PostFrontMatter>
}

const {post} = Astro.props as Props;
---

<a class="blogPostCard" href={post.url}>
	<div class="imageContainer">
		<Image class="image" width={333} height={222} src={post.frontmatter.imgSrc} format={"avif"} alt={post.frontmatter.imgAlt} />
	</div>
	<div class="infoContainer">
		<h2 class="title">{post.frontmatter.title}</h2>
		<div class="date">{format(parseISO(post.frontmatter.pubDate), "MMM d, y")}</div>
		<div class="description">{post.frontmatter.description}</div>
	</div>
</a>

<style>
	.blogPostCard:hover {
		transform: translate(0, 4px)
	}

	.blogPostCard {
		max-width: 28rem;
		margin-left: auto;
		margin-right: auto;
		overflow: hidden;
		border-radius: 0.375rem;
		background-color: var(--color-slate-800)
	}

	.imageContainer {
		aspect-ratio: 3/2;
	}

	.image {
		height: 100%;
		width: 100%;
		object-fit: cover;
		object-position: center;
	}

	.infoContainer {
		padding: 1rem 0.75rem 1.5rem 0.75rem;
		text-align: center;
	}

	.title {
		font-size: 1.25rem;
		line-height: 1.75rem;
		font-weight: 600;
	}

	.date {
		margin-top: 0.25rem;
		font-size: 0.75rem;
    	line-height: 1rem;
		color: var(--color-gray-400);
	}

	.description {
		margin-top: 0.5rem;
		font-size: 0.875rem;
    	line-height: 1.25rem;
	}
</style>