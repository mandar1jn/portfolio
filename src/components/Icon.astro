---
import GithubIcon from "../assets/icons/github.svg";
import LinkedInIcon from "../assets/icons/LinkedIn.svg";

const icons = {
	"Github": {icon: GithubIcon, aspectRatio: 230/225, alt: "The Github Logo"},
	"LinkedIn": {icon: LinkedInIcon, aspectRatio: 635/540, alt: "The LinkedIn Logo"}
}

interface Props {
	icon: keyof typeof icons;
	width?: number;
	height?: number;
}

const {icon, width, height} = Astro.props as Props;
const iconData = icons[icon];

let props = {
	width: 0,
	height: 0
}

if(width)
{
	if(height)
	{
		props = {width, height};
	}
	else
	{
		props = {width, height: Math.round(width / icons[icon].aspectRatio)};
	}
}
if(height)
{
	if(width)
	{
		props = {width, height};
	}
	else
	{
		props = {width: Math.round(height * icons[icon].aspectRatio), height};
	}
}
---
<img src={iconData.icon.src} width={props.width} height={props.height} alt={iconData.alt} />