---
import { type ProjectTag, tags } from '../utils/tags';
import Tag from './Tag.astro';
import {Image} from "astro:assets"
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<"projects">;
}

const {project} = Astro.props as Props;
let usedTags: ProjectTag[] = [];

for(let i: number = 0; i < project.data.tags.length; i++)
{
	if(tags[project.data.tags[i]])
	{
		usedTags.push(tags[project.data.tags[i]]);
	}
}
---

<div class="projectCard">
	<div class="imageContainer">
		<a href={"/projects/" + project.slug}>
			<Image transition:name={project.slug} src={project.data.imgSrc} format="avif" width={256} height={256} alt={project.data.imgAlt} class="image" />
		</a>
	</div>
	<div>
		<div class="titleContainer">
			<a href={"/projects/" + project.slug}>
				<div class="title">
					{
						project.data.title
					}
				</div>
			</a>
			<div class="tags">
				{
					usedTags.map((tag) =>
					(
						<Tag tag={tag} />
					))
				}
			</div>
		</div>
		<p class="description">
			{
				project.data.description
			}
		</p>
	</div>
</div>

<style>
	.projectCard {
		background-color: var(--color-slate-700);
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 0.75rem;
		column-gap: 2rem;
		border-radius: 0.375rem;
	}

	@media only screen and (min-width: 660px)
	{
		.projectCard {
			flex-direction: row;
		}
	}

	.image {
		height: 9rem;
		width: 9rem;
	}

	.image:hover {
		transform: translateY(0.25rem);
	}

	.titleContainer {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	@media only screen and (min-width: 768px)
	{
		.titleContainer {
			flex-direction: row;
		}
	}

	.title {
		font-weight: bold;
		font-size: 1.25rem;
		line-height: 1.75rem;
	}

	.description {
		margin-top: 1rem;
		color: var(--color-gray-300)
	}

	.tags {
		margin-left: 0.75rem;
		display: flex;
		gap: 0.5rem;
	}
</style>