---
type Props = {
	id?: string;
}

const {id} = Astro.props as Props;
---

<section class="section" id={id}>
	<slot />
</section>

<style>
	.section {
		margin-left: auto;
		margin-right: auto;
		max-width: 1024px;
		padding-left: 0.75rem;
		padding-right: 0.75rem;
		padding-top: 1.50rem;
		padding-bottom: 1.50rem;
	}
</style>