---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";
import config from "../utils/config";

export interface Props {
	head: {
		title: string;
		description: string;
	}
}

const { head: { title, description} } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content={config.author.fullName} />
		<meta name="copyright" content={config.author.fullName} />
		<title>{title} - {config.siteName}</title>
	</head>
	<body>
		<NavBar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-border: hsl(17, 24%, 90%);

		--color-slate-900: rgb(15 23 42);
		--color-slate-800: rgb(30 41 59);

		--color-cyan-400: rgb(34 211 238);
		--color-sky-500: rgb(14 165 233);

		--color-gray-100: rgb(243 244 246);
		--color-gray-200: rgb(229 231 235);

		--medium-min-width: 768px;
	}
	html {
		font-size: var(--font-size-base);
		color: var(--color-text);
    	background-color: var(--color-slate-900);
	}
	body {
		color: var(--color-gray-100);
	}
	h1 {
		font-size: var(--font-size-xl);
	}

	h2 {
		font-size: var(--font-size-lg);
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
		
		background-color: var(--color-slate-800);
		padding: 4px 8px 4px 8px;
		border-radius: 4px;
		display: inline-block;
	}

	pre {
		white-space: pre-wrap;
		margin-top: 20px;
		margin-bottom: 20px;
	}

	a:hover {
		color: var(--color-cyan-400);
	}

	.gradient {
		background-image: linear-gradient(to bottom right, var(--color-sky-500), var(--color-cyan-400));
		-webkit-background-clip: text;
		color: transparent;
	}
</style>
