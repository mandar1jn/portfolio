---
import BlogPostCard from '@components/BlogPostCard.astro';
import ProjectCard from '@components/ProjectCard.astro';
import Section from '@components/Section.astro';
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { sortPostsByDate } from '../utils/posts';
import { sortProjectsByDate } from '../utils/projects';
import {Image} from "astro:assets";
import Icon from "@components/Icon.astro";
import heroImage from "@assets/images/foto.jpg";

const posts = await getCollection('blog', ({ data }) => {
	if(import.meta.env.MODE == "production")
		return data.draft != true;
	return true;
});
const sortedPosts = sortPostsByDate(posts);
const lastPosts = sortedPosts.slice(0, 3);

const projects = await getCollection("projects");
const sortedProjects = sortProjectsByDate(projects);
const lastProjects = sortedProjects.slice(0, 3);
---

<Layout head={{title: "Home", description: "Hello. I'm Marijn Kneppers, a 16 year old developer from the Netherlands."}}>
	<Section>
		<div class="fullIntroductionContainer">
			<div class="introductionContainer">
				<h1 class="introductionName">
					Hello. I'm <span class="gradient">Marijn Kneppers</span>
				</h1>
				<p class="introduction">
					I'm an enthousiastic 17 year old developer living in the Netherlands.
				</p>
				<div id="icons">
					<a href="https://www.linkedin.com/in/marijn-kneppers/" target="_blank">
						<Icon icon="LinkedIn" height={64} />
					</a>
					<a href="https://github.com/mandar1jn/" target="_blank">
						<Icon icon="Github" height={64} />
					</a>
				</div>
			</div>
			<div>
				<div class="heroImageContainer">
					<Image src={heroImage} format="avif" alt="A picture of me" width={764/4*3} height={764} loading={"eager"} class="heroImage" />
				</div>
			</div>
		</div>
	</Section>
	<Section>
		<div class="articlesHeader">
			<div class="recent">
				Recent <span class="gradient">Projects</span>
			</div>
			<div class="viewAll">
				<a href="/projects/">View all projects →</a>
			</div>
		</div>
		<div class="projects">
			{
				lastProjects.map((project) => (
					<ProjectCard project={project} />
				))
			}
		</div>
	</Section>
	<Section>
		<div class="articlesHeader">
			<div class="recent">
				Recent <span class="gradient">Posts</span>
			</div>
			<div class="viewAll">
				<a href="/posts/">View all posts →</a>
			</div>
		</div>
		<div class="blogPosts">
			{lastPosts.map((post) => 
			(
				<BlogPostCard post={post} />
			))}
		</div>
	</Section>
</Layout>

<style>
	.fullIntroductionContainer {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	@media(min-width: 768px)
	{
		.fullIntroductionContainer {
			flex-direction: row;
			justify-content: space-between;
			column-gap: 6rem;
		}
	}
	.introductionContainer
	{
		padding-bottom: 1.5rem;
	}

	.introductionName {
		font-size: 1.875rem;
		line-height: 2.25rem;
		font-weight: bold;
		margin-bottom: 0rem;
		margin-top: 0rem;
	}

	.introduction {
		margin-top: 1.5rem;
		font-size: 1.25rem;
		line-height: 2.25rem
	}

	.articlesHeader {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		margin-bottom: 1rem;
	}

	.recent {
		font-weight: bold;
		font-size: 1.5rem;
		line-height: 2rem;
	}

	.viewAll {
		font-size: 0.875rem;
		line-height: 1.25rem;
	}

	.viewAll:hover {
		transform: translateX(0.25rem);
	}

	.projects {
		display: grid;
		background-color: var(--color-slate-800);
		border-radius: 0.375rem;
		padding: 0.75rem;
		gap: 1rem;
	}

	.blogPosts {
		display: grid;
		grid-template-columns: repeat(1, minmax(0, 1fr));
		gap: 1.5rem;
	}

	@media(min-width: 640px)
	{
		.blogPosts {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}
	}

	.heroImageContainer {
		width: 300px;
		height: 400px;
	}

	.heroImage {
		object-fit: cover;
		height: 400px;
		width: 300px;
	}

	#icons {
		display: flex;
		align-items: center;
		flex-direction: row;
		gap: 20px;
		margin-top: 20px;
	}

	@media (max-width: 768px)
	{
		#icons {
			justify-content: center;
		}
	}
</style>