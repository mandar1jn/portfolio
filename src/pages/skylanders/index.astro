---
import figures from "../../assets/skylanders/figures.json";
import Section from "../../components/Section.astro";
import Layout from "../../layouts/Layout.astro";
---
<Layout head={{title: "Skylanders data table", description: "A table of all known skylanders and their data"}} >
	<Section>
		<h1>Skylanders data table</h1>
		<p>
			This website is custom written by me and <b>not</b> associated with Activision or Toys for Bob.
		</p>
	</Section>
	<Section>
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Id</th>
					<th>Variant</th>
					<th>Element</th>
					<th>Series</th>
				</tr>
			</thead>
			<tbody>
				{
					figures.map(figure => {
						return (
							<tr>
								<td>{figure.Name}</td>
								<td>0x{figure.Id.toString(16).padStart(4, '0')}</td>
								<td>0x{figure.Variant.toString(16).padStart(4, '0')}</td>
								<td>{figure.Element}</td>
								<td>{figure.Series}</td>
							</tr>
						);
					})
				}
			</tbody>
		</table>
	</Section>
</Layout>